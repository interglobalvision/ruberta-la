$header-height= 46px

.ratio-image
  width: auto

// HEADER

#header
  position: fixed
  bottom: 0
  left: 0
  width: 100%
  box-shadow: 0 0 14px 0 rgba(255, 255, 255, .6)
  z-index: 1000

#nav-list li:first-child
  margin-right: $margin-basic

#main-content
  padding-bottom: $header-height * 2

.post-type-archive-exhibition
  #main-content
    padding-bottom: $header-height

// EXHIBITION

.masonry-item
  width: 100%
  padding: 0 $margin-tiny
  &:first-child
    position: relative

.limit-paragraph
  p
    max-width: 500px
